@page
@model RazorRegistration.Pages.UserListModel

@{
    ViewData["Title"] = "UserList";
    int count = 1;
}


<div class="ListTable">
<h1>UserList</h1>

    <table >
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.UserInfo[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserInfo[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserInfo[0].Email)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserInfo) {
            <tr>
                <td>@count
                   @{count++;}
                    </td>
                <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
}
    </tbody>
 </table>

</div>